   <style>

body,html{
    height: 100%;
    margin: 0;
    padding: 0;
}
.main-wrapper{
    height: 100%;
    text-align: center;
    white-space: nowrap;
}
.main-wrapper:before{
    content: "";
    display: inline-block;
    vertical-align: middle;
    width: 0;
    margin-right: -.25em; /*might want to tweak this. .25em for extra white space */
    height: 100%;
}
.loginwrapper{
    display: inline-block;
    vertical-align: middle;
    white-space: normal;
}


.loginwrapper { width:450px; min-height:300px;}
.form-group  { text-align:left;     letter-spacing: 0.1em; }
.form-control {border: 1px solid #d4caca;     letter-spacing: 0.1em;}
</style> 
</head>
<body style="position:relative; width:100%; height:100%;">
<!--<div class="corvipreload" id="preloader"></div>-->
<div class="main-wrapper">
	<div class="loginwrapper" style="border:1px solid #f1f1f1; box-shadow: 0 0 15px #ddd">
<div class="loginsec1" style="background:#f8fafc; height:150px;border-bottom: 1px solid #eee;">
	    <div style=" padding-top:45px">
	    <object style="width:200px;" data="img/logos/corvilogomenu.svg" type="image/svg+xml">
          <img class=" fade" style=" margin-top:25px; margin-left:30px; " src="img/logo.png">
        </object>
        </div>
</div>
<div class="loginsec2" style="text-align:left; padding:30px">
        
            
    <form class=""method="post" action="/login" onSubmit="return checkblank(this);">
    			<div class="form-group ">
            <h3>Please Fill Details to Login. </h3>
             <% if (message.length > 0) { %>
			 <div id="signupalert" class="alert alert-danger">
				<span><%= message %></span>
			</div>
			 <% } %>
            </div>
    			<div class="form-group ">
                	<label for="email">Sign in with your email address</label>
                  <input type="email" name="user_name" class="form-control" id="email" placeholder="Enter your email">
                </div>
                <div class="form-group ">
                	<label for="password">Password</label>
                  <input type="password" name="password" class="form-control" id="password" placeholder="Please enter your password...">
                </div>
                
                <input type="submit" class="btn btn-default" value="Sign in">
    
    </form>
</div>
</div>
</div>






<script src="assets/jquery.min.js"></script> 
<script src="assets/jquery-ui.min.js"></script> 
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script> 
<script type="text/javascript" src="assets/scrolloverflow.js"></script> 
<script type="text/javascript" src="assets/fullpage.js"></script> 
<script type="text/javascript">
	$(document).ready(function() {
		$('#fullpage').fullpage({
			scrollOverflow: true,
			'afterRender': function(index){		
				$('.slider1').removeClass('close');
			}
		});
	});
</script> 
<script>
// site preloader -- also uncomment the div in the header and the css style for #preloader
$(window).load(function(){
	$('#preloader').fadeOut('5000',function(){
		$(this).remove();
	});
});
jQuery(document).ready(function($) {
	$("body").on("click","#close-lightbox",function(){
		$('.slider1').addClass('close');
		setTimeout(function(){
			location.href="index.html#page2";
		},500)
	});
});
</script>
</body>